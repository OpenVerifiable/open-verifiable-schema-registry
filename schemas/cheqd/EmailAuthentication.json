{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schema/email-authentication/1.0.0",
  "version": "1.0.0",
  "title": "EmailAuthentication",
  "description": "A Verifiable Credential for Email Authentication",
  "type": "object",
  "required": ["@context", "type", "issuer", "issuanceDate", "expirationDate", "credentialSubject"],
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "https://www.w3.org/2018/credentials/v1",
          "https://schema.org"
        ]
      }
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["VerifiableCredential", "SocialProfile", "Person"]
      }
    },
    "issuer": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "name": { "type": "string" },
        "profileHandle": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "image": { "type": "string", "format": "uri" }
      },
      "required": ["id", "name", "profileHandle", "url", "image"]
    },
    "issuanceDate": { "type": "string", "format": "date" },
    "expirationDate": { "type": "string", "format": "date" },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "credentialInternalId": { "type": "string" },
        "category": { "type": "string", "enum": ["social"] },
        "social": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["Email Profile"] },
            "name": { "type": "string", "enum": ["Email Profile"] },
            "description": { "type": "string" },
            "image": { "type": "string", "format": "uri" },
            "sameAs": {
              "type": "array",
              "items": { "type": "string", "format": "uri" },
              "description": "Links to external email-related profiles using schema.org sameAs property"
            },
            "Person": {
              "type": "object",
              "properties": {
                "email": { "type": "string", "format": "email" },
                "identifier": { "type": "string" },
                "lastReviewed": { "type": "string", "format": "date-time" },
                "name": { "type": "string" },
                "url": { "type": "string", "format": "uri" },
                "image": { "type": "string", "format": "uri" },
                "knows": {
                  "type": "array",
                  "items": { "type": "string", "format": "uri" },
                  "description": "Connections or references for the person"
                }
              },
              "required": ["email", "identifier", "lastReviewed"]
            }
          },
          "required": ["type", "name", "description", "image", "sameAs", "Person"]
        },
        "linkedImage": { "type": "string", "format": "uri" }
      },
      "required": ["id", "credentialInternalId", "category", "social", "linkedImage"]
    }
  }
}
