{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SocialAuthentication",
  "description": "A Social Authentication Credential based on schema.org standards",
  "type": "object",
  "version": "0.0.1",
  "required": ["@context", "type", "issuer", "issuanceDate", "expirationDate", "credentialSubject"],
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "https://www.w3.org/2018/credentials/v1",
          "https://schema.org"
        ]
      }
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["VerifiableCredential", "Social", "Person"]
      }
    },
    "issuer": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "name": { "type": "string" },
        "profileHandle": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "image": { "type": "string", "format": "uri" }
      },
      "required": ["id", "name", "profileHandle", "url", "image"]
    },
    "issuanceDate": { "type": "string", "format": "date" },
    "expirationDate": { "type": "string", "format": "date" },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "credentialInternalId": { "type": "string" },
        "category": { "type": "string", "enum": ["social"] },
        "social": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["SocialProfile"] },
            "name": { "type": "string", "enum": ["Person"] },
            "description": { "type": "string" },
            "image": { "type": "string", "format": "uri" },
            "sameAs": {
              "type": "array",
              "items": { "type": "string", "format": "uri" },
              "description": "Links to social profiles based on schema.org's sameAs property"
            },
            "webPage": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": { "type": "string", "enum": ["ProfilePage"] },
                  "description": { "type": "string" },
                  "name": { "type": "string" },
                  "identifier": { "type": "string" },
                  "lastReviewed": { "type": "string", "format": "date-time" }
                },
                "required": ["type", "description", "name", "identifier", "lastReviewed"]
              }
            }
          },
          "required": ["type", "name", "description", "image", "sameAs", "webPage"]
        },
        "linkedImage": { "type": "string", "format": "uri" }
      },
      "required": ["id", "credentialInternalId", "category", "social", "linkedImage"]
    }
  }
}